<%= render 'list' %>

<%= render 'item_title' %>

<% content_for :item do %>

  <%= render 'info' %>

  <h3>Ajouter un ingrédient à la recette</h3>

  <p><%= link_to 'Annuler', recipe_path(@recipe) %></p>

  <table>
    <tr>
      <th>Nom</th>
      <th>Type</th>
      <th>Prix</th>
    </tr>
 
    <% @ingredient_candidates.each do |i| %>
      <tr>
        <td><%= link_to i.name, recipe_ingredient_add_ingredient_path(@recipe,i) , method: :post %></td>
        <td><%= i.type.name_short %></td>
        <td><%= if i.price_by_unit != nil  then i.price_by_unit.round(2).to_s + ' €/' +i.type.mesure_unit end %></td>
      </tr>
    <% end %>
  </table>


<% end %>
