<form class="form-horizontal pg-product-form">
  <div class="form-group">
    <label class="control-label col-sm-2" for="product_variant_id">
      Variante
    </label>
    <div class="col-sm-6">
      <select class="select form-control" id="product_variant_id">
      </select>
    </div>
    <label class="integer required control-label col-sm-2" for="product_volume">
      <abbr title="required">*</abbr> Volume
    </label>
    <div class="col-sm-2">
      <input class="numeric integer required form-control" type="number" step="1" name="product[volume]" id="product_volume">
    </div>
  </div>

  <div id="ProductInfo" style="display: none;">
 
      <div class="form-group string optional product_container">
        <label class="string optional control-label col-sm-2" for="product_container">Contenant</label>
        <div class="col-sm-5">
          <input class="string5optional form-control" type="text" id="product_container">
        </div>
  
        <label class="integer optional control-label col-sm-3" for="product_number_produced">Nb produit</label>
        <div class="col-sm-2">
          <input class="numeric integer optional form-control" type="number" step="1" id="product_number_produced"> 
        </div>
      </div>
  
      <div class="form-group string optional product_description">
        <label class="string optional control-label col-sm-2" for="product_description">Description</label>
        <div class="col-sm-10">
          <textarea rows="2" class="string optional form-control" type="text" id="product_description"></textarea>
        </div>
      </div>
      
      <div class="form-group">
        <label for="creation-date-input" class="col-sm-2">Création</label>
        <div class="col-sm-4">
          <div class='input-group date' id='creation-date'>
            <input type='text' class="form-control" id='creation-date-input' />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
    
        <label for="peremption-date-input" class="col-sm-2">Péremption</label>
        <div class="col-sm-4">
          <div class='input-group date' id='peremption-date'>
            <input type='text' class="form-control" id='peremption-date-input' />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div> 
        </div>  
      </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-8 col-sm-4">
        <button class="btn btn-default" type="button" id="cancel-create-product" style="display: none;" >Annuler</button>
        <button class="btn btn-default" type="button" id="create-product-form" >Créer produit</button>
        <button class="btn btn-default" type="button" id="save-product" style="display: none;">Créer produit</button>
    </div>
  </div>      
  </form>
