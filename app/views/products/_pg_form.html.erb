<form class="form-horizontal pg__product__form">
  <div class="form-group">
    <label class="integer required control-label col-sm-2" for="product__volume">
      <abbr title="required">*</abbr> Volume
    </label>
    <div class="col-sm-2">
      <input class="numeric integer required form-control" type="number" step="10" id="product__volume">
    </div>
    <label class="control-label col-sm-2" for="product__variant">
      Variante
    </label>
    <div class="col-sm-6">
      <div class="input-group">
        <select class="select form-control" id="product__variant">
        </select>
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><a href="#" id="modify-variant">Modifier paramètres</a></li>
            <li><a href="#" >Modifier ingrédients</a></li>
            <li><a href="#" id="change-proportions">Modifier proportions</a></li>
            <li><a href="#" >Définir comme base</a></li>
            <li><%= link_to('Nouvelle variante', new_recipe_variant_path(@recipe)) %></li>
            <li><a href="#">Supprimer</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div id="product__details" style="display: none;">
 
    <div class="form-group">
      <label class="string required control-label col-sm-2" for="product__container">
        <abbr title="required">*</abbr>Contenant
      </label>
      <div class="col-sm-5">
        <input class="string required form-control" type="text" id="product__container">
      </div>
      <label class="integer required control-label col-sm-3" for="product__number-produced">
        <abbr title="required">*</abbr> Nb produit
      </label>
      <div class="col-sm-2">
        <input class="numeric integer required form-control" type="number" step="1" id="product__number-produced"> 
      </div>
    </div>

    <div class="form-group">
      <label class="string optional control-label col-sm-2" for="product__description">Description</label>
      <div class="col-sm-10">
        <textarea rows="2" class="string optional form-control" type="text" id="product__description"></textarea>
      </div>
    </div>
    
    <div class="form-group">
      <label for="production-date__input" class="col-sm-2">Création</label>
      <div class="col-sm-4">
        <div class='input-group date' id='production-date'>
          <input type='text' class="form-control" id='production-date__input' />
          <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
  
      <label for="expiration-date__input" class="col-sm-2">Péremption</label>
      <div class="col-sm-4">
        <div class='input-group date' id='expiration-date'>
          <input type='text' class="form-control" id='expiration-date__input' />
          <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div> 
      </div>  
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4 btn--product">
        <button class="btn btn-default" type="button" id="btn--product--details" >Créer produit</button>
        <button class="btn btn-default" type="button" id="btn--product--new--initiate" style="display: none;">Nouveau produit</button>
    </div>
    <div class="col-sm-offset-2 col-sm-4">
      <button class="btn btn-default" type="button" id="btn--product--new--save" style="display: none;">Enregistrer</button>
    </div>
  </div>      
  </form>
