<%= simple_form_for @ingredient_type do |f| %>

  <%= f.input :name, label: 'Nom' %>

  <%= f.input :name_short, label: 'Nom abrégé' %>

  <%= f.input :description, as: :text, label: 'Description', input_html: {rows: 2} %>

  <%= f.input :mesure_unit, label: 'Unité de mesure' %>

  <%= f.input :density, label: 'Densité' %>

    
  <%= f.button :submit, 'Enregistrer' %>
  <%= link_to( 'Annuler', :back, {class: "btn btn-default", role: "button"} )%>
    
<% end %>
