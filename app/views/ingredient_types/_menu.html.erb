<% if ['new', :edit].include?(params[:action]) then %>
  <%= menu_item(menu: :content_menu, 
       path: ingredient_types_path, label: 'Annuler') %>
<% else %>
  <%= menu_item(menu: :content_menu, 
       path: new_ingredient_type_path, label: 'Nouveau type',
       can_condition: {action: :create, object: @ingredient_type}
  ) %>
<% end %>

<% if (params[:action]) == :show then%>
  <%= menu_item(menu: :content_menu, 
      label: 'Modifier', path: edit_ingredient_type_path,
       can_condition: {action: :update, object: @ingredient_type}
  )%>
  
  <%= menu_item(menu: :content_menu, 
       path: ingredient_type_path(@ingredient_type), label: 'Supprimer', 
       link_param: {method: :delete, data: { confirm: 'Voulez-vous supprimer cet utilisteur ?' }},
       can_condition: {action: :delete, object: @ingredient_type}
  )%>
<% end %>
