<%= render 'nav_resume' %>
<%= render 'header' %>
<%= render 'menu' %>
     
<% content_for :item_content do %>

  <%= form_for @variant ,url: recipe_variant_change_proportions_path(@recipe,@variant), method:'patch' do |f| %>
  <input type="hidden" name="variant[id]" step="any" type="number" value=<%= @variant.id %> />
  
  <p><strong>Modifier Proportions</strong></p>
  
  <p><strong><i>Par type</i></strong></p>

  <table>
    <% @variant.proportions.where(composant_type: 'IngredientType').each do |p| %>
      <tr>
         <td><%=  p.composant.name %></td>
         <td>
           <input type="hidden" name="variant[proportions][][id]" step="any" type="number" value=<%= p.id %> />
           <input min="0" name="variant[proportions][][value]" step="any" type="number" value=<%= p.value %> />
        </td>
      </tr>
    <% end %>
  </table>

  <p><strong><i>Ingr√©dients pour chaque type</i></strong></p>

    <table>
      <% @variant.proportions.where(composant_type: 'IngredientType').each do |itp| %>
          <tr><td><strong><%=  itp.composant.name %></strong></td></tr>
        <% @variant.proportions_for_type(itp.composant).each do |ip| %>
          <tr>
           <td><%=  ip.composant.name %></td>
           <td>
               <input type="hidden" name="variant[proportions][][id]" step="any" type="number" value=<%= ip.id %> />
               <input min="0" name="variant[proportions][][value]" step="any" type="number" value=<%= ip.value %> />
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
  <%= f.submit 'Modifier proportions' %>
  <%= link_to( 'Annuler', :back, {class: "btn btn-default", role: "button"} )%>
  <% end %>

<% end %>
