<% if params[:action] == 'new' then%>
  <%= menu_item(menu: :content_menu, 
       path: recipe_path(@recipe), label: 'Annuler') %>
<% end%> 

<% if params[:action] == 'show' then%>
  <%= menu_item(menu: :content_menu, 
       path: edit_recipe_variant_path(@recipe, @variant), label: 'Modifier', 
         can_condition: {action: :update, object: @variant}) 
    %>
  <%= menu_item(menu: :content_menu, 
       path: recipe_variant_path(@recipe, @variant), label: 'Supprimer', 
       link_param: {method: :delete, data: { confirm: 'Voulez-vous supprimer cette variante  ?' }}, 
         can_condition: {action: :delete, object: @variant}) 
    %>  
<% end%> 