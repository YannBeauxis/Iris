<%= render 'nav_resume' %>
<%= render 'header' %>
<%= render 'menu' %>

<% content_for :item_content do %>

  <div class="subcontent">
    <div class="title">Dosage ingr√©dients</div>

    <%= table_by_category(
      category: {
        name: :type,
        collection: @ingredient_types
      },
      item: {
        collection: @ingredients
      },
      columns: [{name: 'type',
                  cat_method: 'proportion_variant', 
                  cat_method_params: @variant },
                {name: 'ingredient', 
                  method: 'proportion_variant', 
                  method_params: @variant}]
    ) %>
  
  </div>

  <div class="subcontent">
    <div class="title">Produits</div>
  
    <ul>
      <% @variant.products.each do |p| %>
        <li><%= link_to p.name, recipe_product_path(@recipe,p)%></li>
      <% end %>
    </ul>
  
  </div>

<% end %>

