<%= form_for @container, :url => url_for([@ingredient, @container]) do |f| %>

  <p>
    <%= f.label 'Volume intial' %><br>
    <%= f.number_field :volume_init, :step => 'any' %>
  </p>

  <p>
    <%= f.label 'Prix d\'achat' %><br>
    <%= f.number_field :price, :step => 'any' %>
  </p>

  <p>
    <%= f.label 'Volume actuel' %><br>
    <%= f.number_field :volume_actual, :step => 'any' %>
  </p>

  <p>
    <%= f.submit 'Enregistrer'%>
  </p>
<% end %>

<p><b>Modifier volume par la masse</b></p>

<%= form_for @container,url: ingredient_container_update_with_mass_path(@ingredient,@container), method:'patch' do |f| %>
  <input type="hidden" name="container[id]" step="any" type="number" value=<%= @container.id %> />


  <p>
    <%= f.label 'Masse totale' %><br>
    <input name="container[mass]" 
                  step="any" type="number" value=<%= @container.mass_total %> />
  </p>
  
  <p>
    <%= f.submit 'Enregistrer'%>
  </p>
<% end %>



