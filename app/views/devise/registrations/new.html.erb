<% content_for :content_header do %>
  <span class="title">Nouvel utilisateur</span>
<% end %>

<% content_for :content_menu do %>
  <%= render "devise/shared/links" %>
<% end %>

<% content_for :item_content do %>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.label :Nom %><br />
      <%= f.text_field :name, :required => true, autofocus: true  %>
    </div>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email  %>
    </div>
  
    <div class="field">
      <%= f.label 'Mot de passe' %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  
    <div class="field">
      <%= f.label 'Confirmation du mot de passe' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    
    <p>    
      <div class="field">   
        <%= f.label 'Role demandÃ© : ' %>
        <%= f.collection_select(:role_id, Role.all, :id, :name, {:selected => 4}) %>
      </div>
    </p>
    <p>
      <div class="actions">
        <%= f.submit "CrÃ©er utilisateur" %>
      </div>
    </p>
  <% end %>
<% end %>
