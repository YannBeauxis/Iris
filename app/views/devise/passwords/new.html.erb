<% content_for :content_header do %>
  <span class="title">Mot de passe oublié</span>
<% end %>

<%= render "devise/shared/links" %>

<% content_for :item_content do %>
  <div class="panel panel-default">
    <div class="panel-body">
      
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), method: :post) do |f| %>
        <%= devise_error_messages! %>
        <%= f.input :email, placeholder: 'user@domain.com' %>
        
        <%= f.button :submit, 'Envoyer email pour réinitialiser mon mot de passe', class: "btn btn-primary" %>
